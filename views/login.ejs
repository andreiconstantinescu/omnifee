<!doctype html>
<html>
  <head>
	<title>
      Omnifee | Login
  </title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <style>
	body 		{
        padding-top:80px;
      }
      #logo {
        width: 100%;
      }
  </style>
  </head>
  <body>

	<div class="container">
      <div class="content">
        <div class="row">
          <div class="col-sm-4 col-sm-offset-4">
						<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>
			<a href="/">
              <img id="logo" src="../assets/omnifee.png" class="login-logo"/>
          </a>
          <form method="POST" action="/login">
            <div class="form-group">
              <label class="control-label">
                Username
              </label>
              <input type="text" placeholder="Adresa de Email" required="" name="email" class="mail input-lg form-control"/>
            </div>
            <div class="form-group">
              <label class="control-label">
                Parola
              </label>
              <input type="password" placeholder="Parola" name="password" class="pwd1 input-lg form-control"/>
            </div>
            <button type="submit" class="btn btn-lg btn-primary">
              Log In
            </button>
            <br/>
          </form>
          <div class="nu-ai-cont">
            <span>
              Nu ai cont? Inregistreaza-te gratuit
            </span>
            <a href="/signup">
              aici
            </a>
            <span>
              !
            </span>
          </div>
      </div>
          </div>
      </div>
  </div>
  </body>
</html>
